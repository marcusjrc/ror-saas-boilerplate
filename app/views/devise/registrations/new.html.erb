<%= render "devise/shared/layout_start" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-sm">
    <%= render "devise/shared/links" %>
  </div>
  <h2 class="mt-3">Register</h2>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name" %>
  </div>
  <div>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name" %>
  </div>
  <div>
    <%= f.label :password %>
    <% if @minimum_password_length %>
      <span class="text-xs italic">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div>
    <%= f.submit "Register", class: "w-full" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/layout_end" %>
